<!DOCTYPE html>
<html>
  <head>
    <title>Idea Factory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.min.css" rel="stylesheet">

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

    <nav>
      <h2 class="logo"><i class="fas fa-industry"></i></h2>
      <%= link_to 'All Ideas', ideas_path, class: "nav-link" %>
      <%= link_to 'New Idea', new_idea_path, class: "nav-link" %>

      <div class="login">
        <% if @current_user.present? %>
          <p class="username">Signed in as <%= @current_user.name %></p>
          <%= link_to 'Sign Out', session_path(session), method: :delete, class: "nav-link" %>
        <% else %>
          <%= link_to 'Sign In', new_session_path, class: "nav-link" %>
          <%= link_to 'Sign Up', new_user_path, class: "nav-link" %>
        <% end %>
      </div>

    </nav>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
