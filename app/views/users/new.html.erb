<article class="users-new">

    <h1 class="heading">Sign Up</h1>

    <%= form_for(@user) do |f| %>
            <div class="form-input">
                <%= f.label :name %>
                <%= f.text_field :name %>
            </div>
            <div class="form-input">
                <%= f.label :email %>
                <%= f.text_field :email %>
            </div>
            <div class="form-input">
                <%= f.label :password %>
                <%= f.password_field :password %>
            </div>
            <div class="form-input">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation %>
            </div>

    <%= f.submit value: "Sign Up!", class: "submit" %>

    <% end %>
      
</article>